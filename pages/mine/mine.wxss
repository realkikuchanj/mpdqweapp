/* pages/mine/mine.wxss */
.user-header {
    width: 100%;
    height: 448rpx;
    margin-bottom: 20rpx;
    padding-top: 75rpx;
    box-sizing: border-box;
    background: linear-gradient(to top left,#bcbcbc,#bcbcbc);
}
.user-img {
    width: 200rpx;
    height: 200rpx;
    margin: auto;
    text-align: center;
    background-color: rgb(255,255,255);
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 1rpx 4rpx 5rpx #5b5b5b;   
}



.user-header .login-btn {
    width: 300rpx;
    height: 80rpx;
    margin: auto;
    margin-top: 80rpx;
    box-align: auto;
    line-height: 80rpx;
    text-align: center;
    color: rgb(255,255,255);
    background-color: #d4237a;
    justify-content:center;

}

.user-order {
    display: flex;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid rgb(216,216,216);
    box-sizing: border-box;
}

.order-all {
    width: 630rpx;
    font-size: 28rpx;
    color: rgb(102,102,102);
}

.order-look {
    font-size: 24rpx;
    color: rgb(153,153,153);
}

.icon-right {
    display: inline-block;
    vertical-align: -4rpx;
}

